<Window x:Class="俄罗斯方块promax.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:俄罗斯方块promax"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="300" Width="200" Loaded="Window_Loaded" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="俄罗斯方块" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <Button Grid.Row="1" Name="StartButton" Margin="10" Content="开始游戏" FontSize="25" Click="StartButton_Click"/>
        <Button Grid.Row="2" Name="HelpButton" Margin="10" Content="帮助" FontSize="25" Click="HelpButton_Click"/>
        <Button Grid.Row="3" Name="RecordButton" Margin="10" Content="历史" FontSize="25" Click="RecordButton_Click"/>


    </Grid>
</Window>
