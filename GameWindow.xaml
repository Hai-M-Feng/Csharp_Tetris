<Window x:Class="俄罗斯方块promax.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:俄罗斯方块promax"
        mc:Ignorable="d"
        PreviewKeyDown="GameWindow_PreviewKeyDown"
        Title="GameWindow" Height="740" Width="330" Loaded="Window_Loaded" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="600"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid  Name="GameGrid" Grid.Row="1" Height="600" ShowGridLines="False" Width="300"/>

        <TextBlock Name="ScoreBlock" Text="SCORE : 123" Grid.Row="2" Margin="20" FontSize="36" TextAlignment="Center" />


    </Grid>
</Window>
